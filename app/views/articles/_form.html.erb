<%= render 'shared/errors', resource: @article %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for @article, html: { class: 'form-horizontal' } do |f| %>
      <div class="form-group">
        <%= f.label :title, class: 'col-sm-2 control-label' %>
        <div class="col-sm-8">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: 'col-sm-2 control-label' %>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Body of article' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit nil, class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

    <div align='center'>
      <%= link_to 'Cancel request and return to articles listing', articles_path %>
    </div>
  </div>
</div>
